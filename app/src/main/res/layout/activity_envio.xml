<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".envio">

    <TextView
        android:id="@+id/txt_1"
        android:textColor="@color/celeste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginBottom="80dp"
        android:text="@string/ing_par"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/dato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dato"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="78dp"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_env"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_1"
        tools:ignore="MissingConstraints"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_env"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginBottom="269dp"
        android:background="@drawable/boton"
        android:text="@string/env_par"
        android:textColor="@color/blanco"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dato"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>